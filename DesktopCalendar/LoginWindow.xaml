<Window x:Class="DesktopCalendar.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeskFlow" Height="540" Width="360"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" ShowInTaskbar="False">

    <Border CornerRadius="12" MouseLeftButtonDown="Window_MouseDown">
        <Border.Background>
            <SolidColorBrush Color="#16161E"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.6" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <!-- 关闭按钮 -->
            <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Click="Close_Click" Width="32" Height="32" Margin="8"
                    Foreground="#666" Background="Transparent" BorderThickness="0" Cursor="Hand" FontSize="13">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="Transparent" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#22FFFFFF"/>
                                <Setter Property="Foreground" Value="#999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- 登录表单 -->
            <StackPanel x:Name="LoginForm" VerticalAlignment="Center" Margin="36,40,36,30">
                <!-- Logo -->
                <Border Width="52" Height="52" CornerRadius="12" Margin="0,0,0,24" HorizontalAlignment="Center">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="1,1">
                            <GradientStop Color="#8B5CF6" Offset="0"/>
                            <GradientStop Color="#6366F1" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="D" FontSize="26" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Foreground="White" FontFamily="Segoe UI"/>
                </Border>

                <!-- 标题 -->
                <TextBlock x:Name="TitleText" Text="欢迎使用 DeskFlow" FontSize="20" FontWeight="SemiBold" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,32"/>

                <!-- 邮箱 -->
                <TextBox x:Name="EmailInput" Height="44" FontSize="14" Foreground="White" 
                         CaretBrush="White" Margin="0,0,0,12" VerticalContentAlignment="Center">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border" Background="#1E1E2E" BorderBrush="#2D2D3D" 
                                    BorderThickness="1" CornerRadius="8" Padding="14,0">
                                <Grid>
                                    <TextBlock x:Name="placeholder" Text="邮箱地址" Foreground="#555" 
                                               VerticalAlignment="Center" FontSize="14"
                                               Visibility="Collapsed"/>
                                    <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <!-- 密码 -->
                <PasswordBox x:Name="PasswordInput" Height="44" FontSize="14" Foreground="White" 
                             CaretBrush="White" Margin="0,0,0,8" VerticalContentAlignment="Center">
                    <PasswordBox.Template>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border x:Name="border" Background="#1E1E2E" BorderBrush="#2D2D3D" 
                                    BorderThickness="1" CornerRadius="8" Padding="14,0">
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </PasswordBox.Template>
                </PasswordBox>

                <!-- 忘记密码 -->
                <TextBlock Text="忘记密码？" Foreground="#666" FontSize="12" HorizontalAlignment="Right" 
                           Margin="0,0,0,20" Cursor="Hand" MouseLeftButtonDown="ForgotPassword_MouseDown">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#8B5CF6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- 错误提示 -->
                <Border x:Name="ErrorBorder" Background="#20EF4444" CornerRadius="6" 
                        Padding="12,8" Margin="0,0,0,12" Visibility="Collapsed">
                    <TextBlock x:Name="ErrorText" Text="" Foreground="#EF4444" 
                               FontSize="12" TextWrapping="Wrap" TextAlignment="Center"/>
                </Border>

                <!-- 登录按钮 -->
                <Button x:Name="LoginButton" Content="登 录" Height="44" FontSize="14" 
                        FontWeight="SemiBold" Foreground="White" Cursor="Hand" 
                        Click="Login_Click" Margin="0,0,0,24">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" CornerRadius="8">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,0">
                                        <GradientStop Color="#8B5CF6" Offset="0"/>
                                        <GradientStop Color="#7C3AED" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="bg" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- 注册链接 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock Text="还没有账号？" Foreground="#555" FontSize="13"/>
                    <TextBlock Text="立即注册" Foreground="#8B5CF6" FontSize="13" Cursor="Hand" 
                               Margin="4,0,0,0" MouseLeftButtonDown="SwitchToRegister_MouseDown">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- 分割线 -->
                <Grid Margin="0,0,0,16">
                    <Border Height="1" Background="#2D2D3D" VerticalAlignment="Center"/>
                    <TextBlock Text="或" Foreground="#444" FontSize="12" Background="#16161E" 
                               Padding="12,0" HorizontalAlignment="Center"/>
                </Grid>

                <!-- 跳过登录 -->
                <TextBlock Text="跳过，使用本地模式" Foreground="#555" FontSize="12" 
                           HorizontalAlignment="Center" Cursor="Hand" 
                           MouseLeftButtonDown="SkipLogin_MouseDown">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#888"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <!-- 注册表单（默认隐藏） -->
            <StackPanel x:Name="RegisterForm" VerticalAlignment="Center" Margin="36,40,36,30" Visibility="Collapsed">
                <!-- Logo -->
                <Border Width="52" Height="52" CornerRadius="12" Margin="0,0,0,24" HorizontalAlignment="Center">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="1,1">
                            <GradientStop Color="#8B5CF6" Offset="0"/>
                            <GradientStop Color="#6366F1" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="D" FontSize="26" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Foreground="White" FontFamily="Segoe UI"/>
                </Border>

                <!-- 标题 -->
                <TextBlock Text="创建账号" FontSize="20" FontWeight="SemiBold" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,32"/>

                <!-- 邮箱 -->
                <TextBox x:Name="RegEmailInput" Height="44" FontSize="14" Foreground="White" 
                         CaretBrush="White" Margin="0,0,0,12" VerticalContentAlignment="Center">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border" Background="#1E1E2E" BorderBrush="#2D2D3D" 
                                    BorderThickness="1" CornerRadius="8" Padding="14,0">
                                <Grid>
                                    <TextBlock x:Name="placeholder" Text="邮箱地址" Foreground="#555" 
                                               VerticalAlignment="Center" FontSize="14"
                                               Visibility="Collapsed"/>
                                    <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <!-- 密码 -->
                <PasswordBox x:Name="RegPasswordInput" Height="44" FontSize="14" Foreground="White" 
                             CaretBrush="White" Margin="0,0,0,12" VerticalContentAlignment="Center">
                    <PasswordBox.Template>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border x:Name="border" Background="#1E1E2E" BorderBrush="#2D2D3D" 
                                    BorderThickness="1" CornerRadius="8" Padding="14,0">
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </PasswordBox.Template>
                </PasswordBox>

                <!-- 确认密码 -->
                <PasswordBox x:Name="RegConfirmPasswordInput" Height="44" FontSize="14" Foreground="White" 
                             CaretBrush="White" Margin="0,0,0,20" VerticalContentAlignment="Center">
                    <PasswordBox.Template>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border x:Name="border" Background="#1E1E2E" BorderBrush="#2D2D3D" 
                                    BorderThickness="1" CornerRadius="8" Padding="14,0">
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </PasswordBox.Template>
                </PasswordBox>

                <!-- 错误提示 -->
                <Border x:Name="RegErrorBorder" Background="#20EF4444" CornerRadius="6" 
                        Padding="12,8" Margin="0,0,0,12" Visibility="Collapsed">
                    <TextBlock x:Name="RegErrorText" Text="" Foreground="#EF4444" 
                               FontSize="12" TextWrapping="Wrap" TextAlignment="Center"/>
                </Border>

                <!-- 注册按钮 -->
                <Button x:Name="RegisterButton" Content="注 册" Height="44" FontSize="14" 
                        FontWeight="SemiBold" Foreground="White" Cursor="Hand" 
                        Click="Register_Click" Margin="0,0,0,24">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" CornerRadius="8">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,0">
                                        <GradientStop Color="#8B5CF6" Offset="0"/>
                                        <GradientStop Color="#7C3AED" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="bg" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- 登录链接 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="已有账号？" Foreground="#555" FontSize="13"/>
                    <TextBlock Text="立即登录" Foreground="#8B5CF6" FontSize="13" Cursor="Hand" 
                               Margin="4,0,0,0" MouseLeftButtonDown="SwitchToLogin_MouseDown">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- 加载遮罩 -->
            <Border x:Name="LoadingOverlay" Background="#F0101018" CornerRadius="12" Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="⏳" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock x:Name="LoadingText" Text="处理中..." Foreground="#AAA" 
                               FontSize="13" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
